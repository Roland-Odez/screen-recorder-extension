{
    "manifest_version": 3,
    "name": "HelpMeOut",
    "version": "1.0",
    "description": "A chrome extension for screen recording",
    "icons": {
        "16": "images/favicon-16x16.png",
        "32": "images/favicon-32x32.png",
        "48": "images/favicon-32x32.png",
        "128": "images/android-chrome-192x192.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/favicon-16x16.png",
            "32": "images/favicon-32x32.png",
            "48": "images/favicon-32x32.png",
            "128": "images/android-chrome-192x192.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "desktopCapture",
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "http://*/",
        "https://*/"
    ]
}